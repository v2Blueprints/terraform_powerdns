{
	"about": {
		"title": "PowerDNS",
		"explanation": "PowerDNS Server"
	},
	"provider": {
		"type": "power_dns"
	},
	"configuration": {
		"version": "1.4.0",
		"source": "pan-net/powerdns",
		"ttl": 120,
		"protocol": "http",
		"port" : 8081,
		"endpoint": "api/v1",
		"api_key": "^^random(64)^^",
		"dns_type": "none"
	},
	"images": [
		{
			"type": "docker",
			"image": "spaces/engines/base_arena/enginesd_debian_base"
		}
	],
	"ports" : [{
	 "start_port": 53,
	 "external_port": 53,
	  "protocol": "udp"
	}],
	"volumes": [
		{
			"destination": "/var/lib/powerdns/",
			"source": "data"
		}
	],
			"executions": [
		{
			"type": "docker",
			"CMD": "/usr/local/bin/start.sh"
		}
		],
	"bindings": [
		{
			"type": "embed",
			"target": {
				"repository": "https://github.com/v2Blueprints/enginesd_debian_base"
			}
		}
	],
	"system_packages": {
		"adds": [
			"pdns-server",
			"pdns-backend-sqlite3",
			"sqlite3",
			"syslog-ng"
		]
	}
}
